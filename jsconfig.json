{
    "compilerOptions": {
        "allowSyntheticDefaultImports": false,
        "baseUrl": "./src",
        "jsx": "react",
        "paths": {
            "@atoms/*": [
                "/components/Atoms/*"
            ],
            "@molecules/*": [
                "/Components/Molecules/*"
            ],
            "@organisms/*": [
                "/Components/Organisms/*"
            ],
            "@components/*": [
                "/Components/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}